{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Notification Service API",
    "description": "Responsible for users subscription to user reminders, and app reminders"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ReminderSchema": {
        "type": "object",
        "required": [
          "minutes",
          "hours"
        ],
        "properties": {
          "minutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 59
          },
          "hours": {
            "type": "integer",
            "minimum": 0,
            "maximum": 24
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/subscription": {
      "delete": {
        "tags": [
          "Endpoints"
        ],
        "description": "Unsubscribe To Daily Reminders",
        "responses": {
          "200": {
            "description": "Successfully Unsubscribed To Waterminder Daily Reminders"
          }
        }
      },
      "post": {
        "tags": [
          "Endpoints"
        ],
        "description": "Subscribe To Daily Reminders",
        "responses": {
          "200": {
            "description": "Successfully Subscribed To Waterminder Daily Reminders."
          }
        }
      }
    },
    "/reminder": {
      "description": "Remove A Reminder",
      "delete": {
        "tags": [
          "Endpoints"
        ],
        "responses": {
          "200": {
            "description": "The Reminder Has Been Removed"
          }
        }
      },
      "post": {
        "description": "Set The Reminder At Some Time.",
        "tags": [
          "Endpoints"
        ],
        "requestBody": {
          "description": "A JSON Object Containing Reminder Time",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReminderSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A Reminder has been set each X-Hours X-Minutes"
          }
        }
      }
    }
  }
}