{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Record Service API",
    "description": "Responsible for Handling User Water Records."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ArrayOfRecords": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "format": "date"
            },
            "cups": {
              "type": "integer"
            },
            "liters_per_cup": {
              "type": "number"
            }
          }
        }
      },
      "recordSchema": {
        "type": "object",
        "required": [
          "date",
          "cups",
          "liters_per_cup"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "cups": {
            "type": "integer"
          },
          "liters": {
            "type": "number"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": [
        "read",
        "write"
      ]
    }
  ],
  "paths": {
    "/record": {
      "post": {
        "tags": [
          "Endpoints"
        ],
        "description": "Insert New Water Record.",
        "requestBody": {
          "required": true,
          "description": "A JSON Object Containing Record Data, Date - Cups - LitersPerCup",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/recordSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A New Water Record Has Been Inserted"
          }
        }
      }
    },
    "/records": {
      "get": {
        "tags": [
          "Endpoints"
        ],
        "description": "Get List Of Records",
        "responses": {
          "200": {
            "description": "A List Of User Records.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfRecords"
                },
                "example": [
                  {
                    "date": "12/10/2022",
                    "cups": 3,
                    "liters_per_cup": 1.5
                  },
                  {
                    "date": "10/8/2022",
                    "cups": 10,
                    "liters_per_cup": 2
                  },
                  {
                    "date": "10/12/2022",
                    "cups": 6,
                    "liters_per_cup": 1
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}